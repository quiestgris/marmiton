{# templates/login/index.html.twig #}
{% extends 'admin-panel-base.html.twig' %}
{% block head %}
    <link rel="stylesheet" href="{{asset("styles/form/form.css")}}">
{% endblock %}
{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="jc-center">
    <form class="login-form" action="{{ path('app_login') }}" method="post">
        <label for="username" class="form-label form-item">Email:</label>
        <input class="form-input" type="text" id="username" name="_username" value="{{ last_user_name }}" required>

        <label for="password" class="form-label form-item">Mot de passe:</label>
        <input class="form-input" type="password" id="password" name="_password" required>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <button type="submit" class="submit-btn">Se connecter</button>
        {% for message in app.flashes("success") %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
        {% if error %}
            <div class="alert alert-dismissible alert-danger"> {{error.messageKey|trans(error.messageData, 'security')}}
            </div>
        {% endif %}

        </div>
    </form>
{% endblock %}